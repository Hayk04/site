<div class="container">
	<div class="row">
		<div class="col-md-8 mx-auto">
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Id</th>
						<th>Username</th>
						<th>Email</th>
						<th>Category</th>
						<th>Info</th>
						<th>Edit</th>
						<th>Delete</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
            <tr>
            	<td><%= user.id %></td>
            	<td><%= user.username %></td>
            	<td><%= user.email %></td>
            	<td><%= user.category %></td>
            	<td><%= link_to "Info", admin_user_path(user), class: "btn btn-success", data: { confirm: 'Are you sure?' } %></td>
            	<td><%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-info" %></td>
            	<td><%= button_to "Delete", [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
 					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>