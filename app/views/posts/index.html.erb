<div class="container">
	<div class="row">
		<div class="col-md-8 mx-auto">
			<% @posts.each do |f| %>
        <h1><%= f.title %></h1>
        <p><%= sanitize f.content.truncate(200, separator: ' ') %></p>
        <%= link_to "View Post", post_path(f), class: "btn btn-success" %>
        <hr>
			<% end %>
		</div>
	</div>
</div>